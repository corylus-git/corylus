{
    "compilerOptions": {
        "target": "es2017",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "composite": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es2019", "dom"],
        "outDir": "dist"
    },
    "include": ["./src", "./test", "./mocks"]
}
